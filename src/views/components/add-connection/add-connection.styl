.connection__modal
  max-width 700px
  box-shadow rgb(0 0 0 / 20%) 0px 4px 20px
  border-radius 8px
  flex-direction column
  margin 60px auto auto
  position relative
  background white

  .search
    display flex
    align-items center
    border-bottom 1px solid rgb(224, 227, 231)
    border-top-color rgb(224, 227, 231)
    border-right-color rgb(224, 227, 231)
    border-left-color rgb(224, 227, 231)
    padding 8px
    height 100%
    width 100%
    padding-left 16px
    font-size 14px
    flex 1
    border 0
    font-family 'IBM Plex Mono'

  .results
    border-top 1px solid $borderColor
    padding 8px

.result__item
  border-radius 4px
  padding 2px 0px 2px 16px
  display flex
  height 56px
  align-items center
  border-style solid
  border-width 1px
  border-color transparent
  cursor pointer
  &:hover
    background-color rgba(0,0,0,0.1)
    border-color rgb(0,0,0)

.connection__name
  font-size 18px
  font-family 'IBM Plex Mono'

.connection__header
  font-family Roboto, Helvetica, Arial, sans-serif
  font-weight 500
  font-size 1.25rem
  line-height 1.6
  letter-spacing 0.0075em
  flex 0 0 auto
  margin 0px
  padding 16px

.connection__form
  display flex
  flex-direction column
  border-top 1px solid $borderColor
  padding-bottom 16px
  .MuiTextField-root
    margin 16px 16px 0

.connection__footer
  border-top 1px solid $borderColor
  padding 8px
  display flex
  justify-content flex-end
